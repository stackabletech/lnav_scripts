{
  "$schema": "https://lnav.org/schemas/format-v1.schema.json",
  "github_events_log": {
    "title": "Stackable Vector Json Format",
    "description": "Parses the json formatted version of Logs that are gathered by Stackable and sent to the vector aggregator",
    "url": "https://docs.stackable.tech/home/stable/concepts/logging/",
    "file-type": "json",
    "timestamp-field": "timestamp",
    "body-field": "message",
    "level-field": "level",
    "timestamp-format": ["%Y-%m-%dT%H:%M:%S.%N%z" ],
    "line-format":[ {"field": "role"}, ": " ,{ "field": "timestamp" }, " - ", { "field":  "level"}, " - " ,{ "field": "message" } ],
    "hide-extra": true,
    "value": {
      "cluster": {
        "kind": "string",
        "identifier": true,
        "hidden": true
      },
      "file": {
        "kind": "string",
        "identifier": true,
        "hidden": true
      },
      "container": {
        "kind": "string",
        "identifier": true,
        "hidden": true
      },
      "level": {
        "kind": "string",
        "identifier": true
      },
      "logger": {
        "kind": "string",
        "hidden": true
      },
      "message": {
        "kind": "string"
      },
      "namespace": {
        "kind": "string",
        "hidden": true
      },
      "pod": {
        "kind": "string",
        "hidden": true,
        "identifier": true
      },
      "role": {
        "kind": "string",
        "identifier": true
      },
      "roleGroup": {
        "kind": "string",
        "identifier": true,
        "hidden": true
      },
      "source_type": {
        "kind": "string",
        "identifier": true,
        "hidden": true
      },
      "timestamp": {
        "kind": "string"
      },
      "vector": {
        "kind": "json",
        "hidden": true
      }
    }
  }
}